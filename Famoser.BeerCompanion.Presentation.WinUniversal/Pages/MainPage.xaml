<Page
    x:Class="Famoser.BeerCompanion.Presentation.WinUniversal.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Famoser.BeerCompanion.Presentation.WinUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mainPage="using:Famoser.BeerCompanion.Presentation.WinUniversal.UserControls.MainPage"
    mc:Ignorable="d"
    DataContext="{Binding MainPageViewModel, Source={ StaticResource Locator}}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <mainPage:BeerCounter DataContext="{Binding}" />
        <mainPage:FirstTimeWizard VerticalAlignment="Top" Margin="10" Visibility="{Binding UserInformation.FirstTime, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</Page>
