    xmlns:local="using:Famoser.BeerCompanion.Presentation.WinUniversal"
    xmlns:viewModel="using:Famoser.BeerCompanion.Presentation.WinUniversal.ViewModel"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionaries/ConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <ResourceDictionary.ThemeDictionaries>
